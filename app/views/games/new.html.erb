
<div class="container">
  <h1>New Game</h1>

  <ul class="grid">
    <% @grid.each do |letter| %>
    <li class="letter"> <%= letter %> </li>
    <% end %>
  </ul>

  <form action="/score", method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag 'grid', @grid %>
    <input type="text" name="word">
    <input type="submit" value="play!">
  </form>

</div>


